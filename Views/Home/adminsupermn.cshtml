@model Ebook8.Models.adminsupermn

<h4>adminsupermn</h4>
<hr />
<!-- Admin Dashboard Section -->
<div class="row">
    <div class="col-md-3">
        <div class="card">
            <div class="card-header">
                <h5>Total Orders</h5>
            </div>
            <div class="card-body">
                <p>15</p> <!-- Example value for total orders -->
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card">
            <div class="card-header">
                <h5>Total Revenue</h5>
            </div>
            <div class="card-body">
                <p>$499.99</p> <!-- Example value for total revenue -->
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card">
            <div class="card-header">
                <h5>Pending Orders</h5>
            </div>
            <div class="card-body">
                <p>5</p> <!-- Example value for pending orders -->
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card">
            <div class="card-header">
                <h5>Shipped Orders</h5>
            </div>
            <div class="card-body">
                <p>10</p> <!-- Example value for shipped orders -->
            </div>
        </div>
    </div>
</div>

<hr />

<h4>Manage Orders</h4>

<!-- Table displaying sample orders -->
<div class="row">
    <div class="col-md-12">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Order ID</th>
                    <th>Book Name</th>
                    <th>Category</th>
                    <th>Price</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <!-- Sample orders -->
                <tr>
                    <td>1</td>
                    <td>The Mystery of the Lost City</td>
                    <td>Mystery</td>
                    <td>$19.99</td>
                    <td>
                        <form asp-action="DeleteOrder" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="1" />
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
                <!-- Additional rows omitted for brevity -->
            </tbody>
        </table>
    </div>
</div>

<hr />

<h4>Manage Admins</h4>

<!-- Add or Update Admin Section -->
<div class="row">
    <div class="col-md-6">
        <form asp-action="AddOrUpdateAdmin" method="post">
            <div class="form-group">
                <label for="AdminId">Admin ID</label>
                <input type="text" name="AdminId" id="AdminId" class="form-control" placeholder="Enter Admin ID" />
            </div>
            <div class="form-group">
                <label for="AdminName">Admin Name</label>
                <input type="text" name="AdminName" id="AdminName" class="form-control" placeholder="Enter Admin Name" />
            </div>
            <div class="form-group">
                <label for="AdminUsername">Admin Username</label>
                <input type="text" name="AdminUsername" id="AdminUsername" class="form-control" placeholder="Enter Admin Username" />
            </div>
            <div class="form-group">
                <label for="AdminPassword">Admin Password</label>
                <input type="password" name="AdminPassword" id="AdminPassword" class="form-control" placeholder="Enter Admin Password" />
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-success">Add / Update Admin</button>
            </div>
        </form>
    </div>
    <div class="col-md-6">
        <!-- Admin list -->
        <h5>Existing Admins</h5>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Admin ID</th>
                    <th>Username</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <!-- Example admins -->
                <tr>
                    <td>1</td>
                    <td>admin1</td>
                    <td>
                        <form asp-action="DeleteAdmin" method="post" style="display:inline;">
                            <input type="hidden" name="AdminId" value="1" />
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
                <tr>
                    <td>2</td>
                    <td>superadmin</td>
                    <td>
                        <form asp-action="DeleteAdmin" method="post" style="display:inline;">
                            <input type="hidden" name="AdminId" value="2" />
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
