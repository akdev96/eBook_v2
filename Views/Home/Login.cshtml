@model Ebook8.Models.Login

<h4>Login</h4>
<div class="row">
    <div class="col-md-6">
        <form asp-action="Login">
            <!-- Validation Summary -->
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Username Field -->
            <div class="form-group">
                <label asp-for="Username" class="control-label"></label>
                <input asp-for="Username" class="form-control" placeholder="Enter your username" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <!-- Password Field -->
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <!-- Sign In Button -->
            <div class="form-group">
                <button type="submit" class="btn btn-primary w-100">Sign In</button>
            </div>
        </form>

        <!-- Create New Account Link -->
        <div class="mt-3 text-center">
            <p>
                Don't have an account?
                <a asp-action="Register" class="btn btn-link">Create one now</a>
            </p>
        </div>
    </div>
</div>

<!-- Back to List Link -->
<div class="mt-4">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
